<?xml version="1.0" encoding="UTF-8"?>
<animNode>
    <m_Name>Horse_Idle_Turn90R</m_Name>
    <m_animName>Horse_Idle_Turn90R</m_animName>
    <m_Looped>false</m_Looped>

	<!-- 
	This file is in the walk state because animals transition to that state when turning, even if idle.
	-->

    <m_Conditions>
		<m_Name>isTurning</m_Name>
		<m_Type>BOOL</m_Type>
		<m_Value>true</m_Value>
	</m_Conditions>

    <m_Conditions>
		<m_Name>bMoving</m_Name>
		<m_Type>BOOL</m_Type>
		<m_Value>false</m_Value>
	</m_Conditions>

	<m_Conditions>
		<m_Name>isTurningAround</m_Name>
		<m_Type>BOOL</m_Type>
		<m_BoolValue>false</m_BoolValue>
	</m_Conditions>

    <m_Conditions>
		<m_Name>twist</m_Name>
		<m_Type>GTR</m_Type>
		<m_FloatValue>0</m_FloatValue>
	</m_Conditions>

    <m_Conditions>
        <m_Name>isHorse</m_Name>
        <m_Type>BOOL</m_Type>
        <m_Value>true</m_Value>
    </m_Conditions>

	<m_Transitions>
		<m_Target>Horse_Idle</m_Target>
		<m_blendInTime>0.3</m_blendInTime>
	</m_Transitions>
</animNode>